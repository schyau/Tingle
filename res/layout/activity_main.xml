<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundmediumC" >

    <TextView 
        android:id="@+id/tingler_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="30dp"
        android:text="Set your Tingle"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="#FFA1817C"
        />
    <ImageView
        android:id="@+id/tingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tinglenotificationicon"
        android:layout_centerInParent="true"
        />

    <RelativeLayout
            android:id="@+id/genderLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/maleLL"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#FFA1817C"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/okvibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="OK"
                        android:paddingTop="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/femaleLL"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#CFB5C89C"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/stopvibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Play"
                        android:paddingTop="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>

